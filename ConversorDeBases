#include <stdio.h>
#include "biblioteca.h"

void converteDecimal(int dec){
	tPilha p;
	inicializa(&p);
	while(dec>0){
		push(&p, dec%2);
		dec = dec/2;
	}
	mostraPilha(p);
}
//--------------------------------------------
void converteOctal(int oct){
	tPilha p;
	inicializa(&p);
	while(oct>0){
		push(&p, oct%8);
		oct = oct/8;
	}
	mostraPilha(p);
}
//--------------------------------------------
int menu(){
	int op;
	printf("1-decimal\n");
	printf("2-octal\n");
	printf("0-sair\n\n");
	scanf("%d",&op);
	return op;
}
//--------------------------------------------
int main(){
	int valor,op;
	return 0;
	
	do{
		op = menu();
		switch(op){
			case 1: 
				printf("Valor para conversao de base: ");
				scanf("%d",&valor);
				converteDecimal(valor);
			break;
			
			case 2: 
				printf("Valor para conversao de base: ");
				scanf("%d",&valor);
				converteOctal(valor);
			break;
			
		}
	}while(op!=0);
}
